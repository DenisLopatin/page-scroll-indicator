{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "rules": {
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "no-param-reassign": "off",
        "operator-linebreak": "off",
        "no-console": [
            "error", {
                "allow": ["warn", "error"]
            }
        ],
        "linebreak-style": "off",
        "quotes": "off",
        "no-unused-expressions": "off",
        "max-len": [
            "error",
            100,
            {
                "ignoreComments": true,
                "ignoreUrls": true,
                "ignoreRegExpLiterals": true
            }
        ]
    },
    "extends": "airbnb"
}
